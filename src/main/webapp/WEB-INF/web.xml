  <servlet>
    <servlet-name>Bucket</servlet-name>
    <servlet-class>servlet.BasketServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Bucket</servlet-name>
    <url-pattern>/basket</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ListProducts</servlet-name>
    <servlet-class>servlet.ListOfProductServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListProducts</servlet-name>
    <url-pattern>/listProduct</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>BasketDelete</servlet-name>
    <servlet-class>servlet.BasketServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BasketDelete</servlet-name>
    <url-pattern>/bucket</url-pattern>
  </servlet-mapping>


